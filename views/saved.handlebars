{{! Main Header Image }}
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Saved Stories</h1>
    <h2 class="lead text-center">Review and add notes to your saved Stories from Scrappy News.</h2>
  </div>
</div>

{{! Articles }}
<div id="stories">
    {{#each stories}}
        {{> saved-stories }}
    {{/each}}
</div>

{{! Modal for Notes }}
{{#each stories}}
    {{> modal }}
{{/each}}